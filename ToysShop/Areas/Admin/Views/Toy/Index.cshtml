@model List<Toy>
<partial name="_Noitification"/>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Toy List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Toy" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Toy
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Producer</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                        @obj.ListPrice
                    </td>
                    <td>
                        @obj.Producer
                    </td>
                    <td>
                      
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Toy" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Toy" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash2-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>